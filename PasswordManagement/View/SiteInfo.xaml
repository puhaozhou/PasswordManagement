<Window x:Class="PasswordManagement.View.SiteInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordManagement.View"
        mc:Ignorable="d"
        Title="SiteInfo" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dataGrid"  ItemsSource="{Binding site_bind}"
                  CellEditEnding="CellEditEnding" BeginningEdit="BeginningEdit">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding SiteName}" Header="网站" Width="200"/>
                <DataGridTextColumn Binding="{Binding SitePasword}" Header="密码" Width="200"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
